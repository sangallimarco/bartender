{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "ordered-imports": false,
    "no-namespace": false,
    "object-literal-sort-keys": false,
    "no-console": {
      "severity": "warning"
    }
  },
  "jsRules": {
    "object-literal-sort-keys": false
  },
  "trailing-comma": [
    true,
    {
      "multiline": {
        "objects": "never",
        "arrays": "never",
        "functions": "never",
        "typeLiterals": "always"
      },
      "esSpecCompliant": true
    }
  ]
}